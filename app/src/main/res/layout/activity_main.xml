<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!--Title-->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal_measurement_converter"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!--Number of measurements input-->
    <com.google.android.material.textfield.TextInputLayout
        style="?attr/textInputFilledStyle"
        android:id="@+id/textInputLayoutMeasurementValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        app:boxStrokeColor="#fff"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="0dp"
        app:boxCornerRadiusBottomEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextMeasurementValue"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
            android:gravity="end"
            android:paddingBottom="10dp"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--ResultBox-->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@drawable/result_box_background"
        android:gravity="end"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:textColor="?attr/colorOnSurface"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutMeasurementValue" />


    <!-- Measurement Type Buttons -->
    <LinearLayout
        android:id="@+id/measurementButtonsLayout"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:paddingTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textViewResult">

        <Button
            android:id="@+id/buttonHand"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:icon="@drawable/front_hand_24px"
            android:layout_marginEnd="12dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            />

        <Button
            android:id="@+id/buttonFinger"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:icon="@drawable/touch_app_24px"
            android:layout_marginEnd="12dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"/>

        <Button
            android:id="@+id/buttonForearm"
            style="?attr/materialIconButtonFilledTonalStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:icon="@drawable/ulna_radius_alt_24px"
            android:layout_marginEnd="12dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"/>
    </LinearLayout>

    <!-- Finger Type Buttons (Shown when Finger is selected) -->
    <LinearLayout
        android:id="@+id/fingerButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:paddingTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/measurementButtonsLayout">

        <Button
            android:id="@+id/buttonThumb"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Thumb"
            android:layout_height="wrap_content"
            app:iconPadding="0dp"
            app:iconGravity="textStart"/>

        <Button
            android:id="@+id/buttonIndex"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Index"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonMiddle"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Middle"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonRing"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Ring"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonPinky"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Pinky"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--Numpad-->
    <GridLayout
        android:id="@+id/keypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_marginTop="16dp"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fingerButtonsLayout">

        <!-- Digit buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn7"
            style="@style/CircularButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:text="7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn8"
            style="@style/CircularButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:text="8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn9"
            style="@style/CircularButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:text="9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn4"
            style="@style/CircularButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:text="4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn5"
            style="@style/CircularButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:text="5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn6"
            style="@style/CircularButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:text="6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1"
            style="@style/CircularButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:text="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2"
            style="@style/CircularButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:text="2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn3"
            style="@style/CircularButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:text="3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn0"
            style="@style/CircularButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:text="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDot"
            style="@style/CircularButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:text="." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/CircularButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            app:icon="@drawable/backspace_24px"
            app:iconSize="20dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"/>

        <!--Calculate button-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCalculate"
            style="@style/CircularButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:icon="@drawable/equal_24px"
            app:iconSize="20dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:layout_margin="8dp"
            />

        <!--Measurement settings-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSettings"
            style="@style/CircularButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            app:icon="@drawable/settings_24px"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="20dp"/>


    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>