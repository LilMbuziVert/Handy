<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Handy" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <item name="colorSecondaryContainer">@color/material_dynamic_primary80</item>
    </style>

    <style name="CircularButton" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Circle</item>
        <item name="backgroundTint">@color/material_dynamic_secondary90</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="CircularUtilityButton" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Circle</item>
        <item name="backgroundTint">@color/material_dynamic_primary70</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ShapeAppearance.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>
